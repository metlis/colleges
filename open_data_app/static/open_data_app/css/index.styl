@import 'variables.styl'
@import 'layout.styl'
@import 'checkbox.styl'

ul
  list-style-type none

.form-container
  display block
  margin 15px 15px 15px 15px
  border 1px solid $blue
  border-radius 4px
  padding 20px
  background-color white
  box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12)

.form-header
  text-align center
  margin-bottom 15px
  opacity 0.9

.card
  border none
  border-bottom 1px solid lightgrey

.card-header
  height 50px
  cursor pointer
  background-color white
  border none
  h3
    display inline-block
    color $black-header
  i
    display inline-block
    float right
    margin-top 6px

.sub-container
  max-height 250px
  width 100%
  overflow-y auto
  margin 15px 0px 15px 0px
  ul
    padding-left 0px

.card-body
  padding 0px 10px 10px 10px
  h4
    text-align center
    color $black-header

.submit-button-container
  width 100%
  margin-top 15px
  text-align center

.icon
  cursor pointer

.header
  width 100%
  text-align center
  margin-top 15px
  opacity 0.9

.search
  border none
  border-radius 0px
  border-bottom 1px solid $blue
  background-color transparent
.search:focus
  outline none
  box-shadow none
  background-color transparent
  border-bottom 1px solid $blue-dark

.text-container
  margin-top 15px

.rotate
    -moz-transition all .5s linear
    -webkit-transition all .5s linear
    transition all .5s linear

.rotate.down
    -moz-transform rotate(180deg)
    -webkit-transform rotate(180deg)
    transform rotate(180deg)

.text
  text-align center
  padding 0px 20px 0px 20px

.search-form
  display block
  text-align center
  width 100%
  input
    display inline-block
    width 100%
