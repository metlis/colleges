$green = #41B3A3
$blue = rgba(0, 165, 217, 0.5)
$blue-top = rgba(0, 165, 217, 0.05)
$blue-bottom = rgba(0, 165, 217, 0.1)
$red = #EC7556
$brown = #EDA875
$velvet = #CA829A

html
  position relative
  min-height 100%

body
  padding 0px
  margin 0px

h2
  font-size 150%

h3
  font-size 130%

h4
  font-size 110%

.navbar
  background-color $blue-top !important

.dropdown-toggle::after
  border 0px

.navbar-nav
  margin-right 0px


.dropdown-submenu
  li:active
    background-color $blue-top !important
  .dropdown-menu
    max-height 200px
    overflow-y auto
    a
      white-space normal
    .dropdown-item
      padding 8px 4px 8px 12px
      border-bottom 1px solid $blue-bottom

.dropdown-menu .dropdown-toggle:active
  background-color transparent !important

.dropdown-menu .dropdown-submenu .dropdown-menu li a:active
  background-color transparent !important

.dropdown-menu
  padding-top 0px
  li:hover
    background-color $blue-top !important
  li:active
    background-color $blue !important
  .dropdown-submenu
    border-bottom 1px solid $blue-bottom
    padding-top 4px
    padding-bottom 4px

.form-container
  display block
  margin 15px 15px 15px 15px
  border 1px solid $blue
  border-radius 5px
  padding 20px
  ul
    list-style-type none

.form-header
  text-align center
  margin-bottom 15px
  opacity 0.9

.card
  border 1px solid $blue
  margin-bottom 5px


.card-header
  height 50px
  cursor pointer
  background-color white
  border none
  h3
    display inline-block
    opacity 0.9
  i
    display inline-block
    float right
    margin-top 6px
    opacity 0.9

.sub-container
  max-height 250px
  width 100%
  overflow-y auto
  margin 15px 0px 15px 0px
  ul
    padding-left 0px

.card-body
  padding 0px 10px 10px 10px
  h4
    text-align center

.submit-button-container
  width 100%
  margin-top 15px
  text-align center

.submit-button
  width 175px

.icon
  cursor pointer

footer
  width 100%
  height 10%
  .container
    margin 0px auto 0px auto
    text-align center
    width 100%
    p
      font-size 12px
      margin-bottom 0px

.header
  width 100%
  text-align center
  margin-top 15px
  opacity 0.9

.search
  border 1px solid $blue

.text-container
  margin-top 15px

//  custom checkbox
.checkbox label:after {
  content: '';
  display: table;
  clear: both;
}

.checkbox .cr {
  position: relative;
  display: inline-block;
  border: 1px solid $blue;
  border-radius: .25em;
  width: 1.3em;
  height: 1.3em;
  float: left;
  margin-right: .5em;
}

.checkbox .cr .cr-icon {
  position: absolute;
  font-size: .8em;
  line-height: 0;
  top: 50%;
  left: 15%;
}

.checkbox label input[type="checkbox"] {
  display: none;
}

.checkbox label input[type="checkbox"]+.cr>.cr-icon {
  opacity: 0;
}

.checkbox label input[type="checkbox"]:checked+.cr>.cr-icon {
  opacity: 1;
}

.checkbox label input[type="checkbox"]:disabled+.cr {
  opacity: .5;
}