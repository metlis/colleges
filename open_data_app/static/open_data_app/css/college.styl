$green = #41B3A3
$blue = rgba(0, 165, 217, 0.5)
$blue-top = rgba(0, 165, 217, 0.05)
$blue-bottom = rgba(0, 165, 217, 0.1)
$red = #EC7556
$brown = #EDA875
$velvet = #CA829A

body
  position relative

.container-fluid
  margin-top 20px

h2
  font-size 150%

h3
  font-size 130%

h4
  font-size 110%

.navbar
  background-color $blue-top !important

.card
  margin 10px 0px 10px 0px
  border 1px solid $blue

.card-header
  cursor pointer
  background-color $blue-top
  border-bottom 1px solid $blue
  h2
    display inline
  i
    float right
    margin-top 6px

.card-body
  .progress
    height 30px

.top-disciplines
  h3
    text-align center
  .discipline
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue

.all-disciplines
  h3
    text-align center

.disciplines-container
  max-height 350px
  overflow-y auto

.admission-header
  text-align center
  margin-bottom 15px

.admission-circle
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.admissions
  .progress
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue
  h4
    text-align center !important

.no-data
  padding-left 5px

#completion
  h3
    text-align center
    margin-bottom 23px

.completion-circle
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

#demography
  h3
    text-align center
    margin-bottom 23px
  h4
    text-align center
  .progress
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue

.male
.female
.full-time
.family-income
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.single-value
  font-weight: bold
  text-align center
  font-size 24px
  margin-bottom 23px

#earnings
  h3
    text-align center
    margin-bottom 23px

#disciplines
  h3
    margin-bottom 23px

#aid
  h3
    text-align center
    margin-bottom 23px

.grant
.loan
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

#cost
  h3
    text-align center
    margin-bottom 23px

.in-state
.out-state
.net-price
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.fa-info-circle
  font-size 15px

.icon-container
  display inline-block
  width 25px
  float left

.icon-text
  display block
  overflow hidden

#map
  height 100%
  min-height 200px
  width 100%

#list-menu
  position sticky
  position -webkit-sticky
  top 20px

.list-group
  .active
    background-color $blue
    border-color $blue
  :hover
    background-color $blue-top

.list-group-item
  border 1px solid $blue

.icon
  cursor pointer


footer
  width 100%
  height 10%
  .container
    margin 15px auto 0px auto
    text-align center
    width 100%
    p
      font-size 12px
      margin-bottom 0px

.search
  border 1px solid $blue

.buttons-container
  display flex
  justify-content space-between

.favourite-button
  color orange
  cursor pointer
  font-size 25px

.results-back-page
  display inline-block
  width 100%
  text-align center

.badge-link
  text-decoration none !important

@media (max-width: 767.98px)
  .gender-header
    margin-top 15px
  h1
    margin-top 10px
  .family-header
    margin-top 15px
  .debt-header
    margin-top 23px
  .admissions
    .col-sm-12
      h4
        margin-top 10px
  #map
    height 200px
    width 100%
  .all-areas-header
    margin-top 15px


