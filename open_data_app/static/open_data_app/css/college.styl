@import 'variables.styl'
@import 'layout.styl'
@import 'mixins.styl'

body
  position relative

i
  color $blue-dark

th
  font-weight 400

.active
  color $black !important

.card
  margin 10px 0px 10px 0px
  border 1px solid $blue
  box-shadow 0px 3px 1px -2px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12)
  scroll-custom()

.card-header
  cursor pointer
  background-color $blue
  border-bottom 1px solid $blue
  h2
    display inline
  i
    float right
    margin-top 6px

.card-body
  .progress
    height 30px
  .progress:hover
      font-weight 400

.top-disciplines
  h3
    text-align center
  .discipline
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue-bar

.all-disciplines
  h3
    text-align center

.disciplines-container
  max-height 350px
  overflow-y auto

.admission-header
  text-align center
  margin-bottom 15px

.admission-circle
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.admissions
  .progress
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue-bar
  h4
    text-align center !important

.no-data
  padding-left 5px

#completion
  h3
    text-align center
    margin-bottom 23px

.completion-circle
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

#demography
  h3
    text-align center
    margin-bottom 23px
  h4
    text-align center
  .progress
    margin-bottom 10px
  .progress-bar
    color black
    background-color $blue-bar

.male
.female
.full-time
.family-income
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.single-value
  font-weight: 400
  text-align center
  font-size 24px
  margin-bottom 23px

#earnings
  h3
    text-align center
    margin-bottom 23px

#disciplines
  h3
    margin-bottom 23px

#aid
  h3
    text-align center
    margin-bottom 23px

.grant
.loan
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

#cost
  h3
    text-align center
    margin-bottom 23px

.in-state
.out-state
.net-price
  width 100%
  .c100
    float none
    margin 0px auto 25px auto

.fa-info-circle
  font-size 15px

.icon-container
  display inline-block
  width 25px
  float left

.icon-text
  display block
  overflow hidden

#map
  height 100%
  min-height 200px
  width 100%

#list-menu
  position sticky
  position -webkit-sticky
  top 20px

.list-group
  .active
    background-color $blue
    border-color $blue
  :hover
    background-color $blue-top

.list-group-item
  cursor pointer
  padding 10px 10px
  border none
  border-bottom 2px solid #f3eeee
  font-size 15px

.icon
  cursor pointer

.buttons-container
  display flex
  justify-content space-between

.results-back-page
  display inline-block
  width 100%
  text-align center
  border-color $blue-dark
  button
    display inline-block
    width 100%

.badge-link
  text-decoration none !important

.discipline-link
  text-decoration none !important
  color $black
  :hover
    color $blue !important

.top-info
  padding-top 0px

@media (max-width: 767.98px)
  .gender-header
    margin-top 15px
  h1
    margin-top 10px
  .family-header
    margin-top 15px
  .debt-header
    margin-top 23px
  .admissions
    .col-sm-12
      h4
        margin-top 10px
  #map
    height 200px
    width 100%
  .all-areas-header
    margin-top 15px
  .badge
    white-space normal
    text-align left
    display inline


