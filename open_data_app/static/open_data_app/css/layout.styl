html
  position relative
  min-height 100%

body
  padding 0px
  margin 0px
  font-family: "Roboto", "Arial", sans-serif !important;
  font-weight 300 !important
  -webkit-font-smoothing antialiased

a
  color $blue-link
  :hover
    color $blue-link-hover

h1, h2, h3, h4, h5, h6
  font-weight 400

h1
  font-size 190%
  color $black-header

h2
  font-size 150%
  color $black-header

h3
  font-size 110%
  color $black-header

h4
  font-size 100%
  color $black-header

.navbar
  background-color white !important
  box-shadow 1px 1px 0px $blue

.navbar-nav
  margin-right 0px

.title-usa
  color $red
.title-usa:hover
  color $red

.title-colleges
  color $black
.title-colleges:hover
  color $black

footer
  width 100%
  background-color #263238
  color white
  align-items: center;
  display: flex;
  flex: 0 1 auto !important;
  flex-wrap: wrap;
  padding: 6px 16px;
  position: relative;
  transition-duration: 0.2s;
  transition-property: background-color, left, right;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow 1px -1px 0px $blue
  .container
    margin 0px auto 0px auto
    text-align center
    width 100%
    p
      font-size 12px
      margin-bottom 0px
  a
    color white
    font-weight bold
  a:hover
    color $blue

.favourite-button
  color $yellow
  cursor pointer
  font-size 25px

#favourite-badge
  background-color $red-light

.nav-item:hover
  #favourite-badge
    color white
    opacity 0.8
  .favourite-button
    color $yellow
    opacity 0.8

.rotate
    -moz-transition all .5s linear
    -webkit-transition all .5s linear
    transition all .5s linear

.rotate.down
    -moz-transform rotate(180deg)
    -webkit-transform rotate(180deg)
    transform rotate(180deg)

.navbar-toggler
  border none !important

button:focus
  outline none

.badge
  font-weight 500

.add-to-any
  display flex
  justify-content flex-end
  opacity 0.7

.nav-link
  padding 0px !important
  .favourite-button
    padding 0px !important