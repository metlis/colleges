$green = #41B3A3
$blue = rgba(0, 165, 217, 0.63)
$red = #EC7556
$brown = #EDA875
$velvet = #CA829A

h3
  font-size 130%

h4
  font-size 110%

.college-container
  margin-bottom 15px

.admission
.completion
  text-align center
  .c100
    float none
    margin 0px auto 0px auto

.fa-info-circle
  font-size 13px


.progress
  height 30px
  margin-bottom 10px

.progress-bar
  color black
  background-color $blue

.card-header
  p
    margin-bottom 0px

.list-group-item
  display inline-block
  cursor pointer
  padding 0px

.dropright .dropdown-toggle::after
  border none

.dropdown-menu
  width 300px
  max-height 300px
  overflow-y auto
  a
    white-space normal
    cursor pointer

.dropdown-toggle
  width 100%
  height 100%

.item-name
  position relative
  top 12px
  text-align center

#list-menu
  position sticky
  position -webkit-sticky
  top 20px
  z-index 9999